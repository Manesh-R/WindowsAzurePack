<?xml version="1.0" encoding="utf-8"?>
<uiManifest>
  <!--Storage Sample-->
  <extension name="StorageSampleTenantExtension"
             baseUri="~/Content/StorageSampleTenant">
    <scripts>
      <script src="~/Scripts/StorageSampleTenant.Constants.js" />
      <script src="~/Scripts/ViewModel/HW.ViewModels.QuickCreate.js" />
      <script src="~/Scripts/StorageSampleTenant.Controller.js" />
      <script src="~/Scripts/StorageSampleTenant.FoldersTab.js" />
      <script src="~/Scripts/StorageSampleTenant.StorageFilesTab.js" />
      <script src="~/Scripts/StorageSampleTenant.SettingsTab.js" />
      <script src="~/StorageSampleTenantExtension.js" />

      <!--Self registration-->
      <script src="~/extensions.data.js" />
    </scripts>
    <stylesheets>
      <stylesheet src="~/Styles/StorageSampleTenant.css"/>
    </stylesheets>
    <templates>
      <!-- Dialog opened from the CONTAINERS TAB, where there are no folders -->
      <template name="FolderCreateDialog"
                src="~/Templates/FolderCreateDialog.html" />

      <!-- Dialog opened from the contextual command for a selected row in CONTAINERS tab -->
      <template name="FolderInfoDialog"
                src="~/Templates/FolderInfoDialog.html" />

      <!-- Quick create menu launched from +NEW -->
      <template name="FolderQuickCreateMenu"
                src="~/Templates/FolderQuickCreateMenu.html" />

      <!-- Tab view (grid) pages for CONTAINERS -->
      <template name="FoldersTab"
                src="~/Templates/FoldersTab.html" />
      <template name="FoldersTabEmpty"
                src="~/Templates/FoldersTabEmpty.html" />

      <!-- Tab view (grid) pages for StorageFiles -->
      <template name="StorageFilesTab"             src="~/Templates/StorageFilesTab.html" />
      <template name="StorageFilesTabEmpty"        src="~/Templates/StorageFilesTabEmpty.html" />
      <template name="FileUploadWizard"            src="~/Templates/FileUploadWizard.html" />
      
      <!-- Tab view for USAGE -->
      <template name="UsageTab"                    src="~/Templates/UsageTab.html" />
    </templates>
  </extension>
</uiManifest>
